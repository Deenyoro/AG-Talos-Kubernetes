{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    // NOTE: Renovate processes rules from top to bottom, so the rules below take precedence over rules above it
    {
      "description": "Auto merge all Renovate versions",
      "matchPackageNames": ["**renovate**"],
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "addLabels": ["renovate-itself"]
    },
    {
      "description": "Auto merge all Mise versions",
      "matchFileNames": [".mise.toml", "mise.toml"],
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
      "automergeType": "pr",
      "rebaseWhen": "behind-base-branch"
    },
    {
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["patch", "digest"]
    },
    {
      matchDatasources: ["github-release"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["minor", "patch", "digest"]
    },
    {
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["minor", "patch", "digest"],
      matchPackageNames: [
       "ghcr.io/home-operations/prowlarr",
       "ghcr.io/home-operations/sonarr",
       "ghcr.io/home-operations/radarr",
      ]
    },
    {
      matchDatasources: ["docker"],
      automerge: false,
      automergeType: "branch",
      ignoreTests: true,
      matchPackageNames: [
        "ghcr.io/goauthentik/server",
        "ghcr.io/onedr0p/qbittorrent",
        "ghcr.io/home-assistant/home-assistant",
        "wordpress",
        "mariadb",
        "gluetun"
      ]
    },
    {
      matchDatasources: ["helm"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["patch"]
    },
    {
      matchDatasources: ["helm"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["minor"],
      matchPackageNames: [
        "kube-prometheus-stack",
        "reloader"
      ]
    }
  ]
}
